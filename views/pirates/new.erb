<h1>Make your Pirate!</h1>
<form action="/pirates" method="post">
    <label for="name">Pirate Name:</label>
    <input type="text" name="pirate[name]" id="name"><br>
    
    <label for="weight">Pirate Weight:</label>
    <input type="text" name="pirate[weight]" id="weight"><br>
    
    <label for="height">Pirate Height:</label>
    <input type="text" name="pirate[height]" id="height"><br><br>

    <label for="ship_name_1">Ship Name 1:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_1"><br>

    <label for="ship_type_1">Ship Type 1:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_1"><br>

    <label for="ship_booty_1">Ship Booty 1:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_1"><br><br>

    <label for="ship_name_2">Ship Name 2:</label>
    <input type="text" name="pirate[ships][][name]" id="ship_name_2"><br>

    <label for="ship_type_2">Ship Type 2:</label>
    <input type="text" name="pirate[ships][][type]" id="ship_type_2"><br>

    <label for="ship_booty_2">Ship Booty 2:</label>
    <input type="text" name="pirate[ships][][booty]" id="ship_booty_2"><br><br>

    <input type="submit" value="Submit">

</form>
